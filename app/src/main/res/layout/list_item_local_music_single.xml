<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="55dp">

    <ImageView
            android:id="@+id/lilms_imageViewPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:src="@drawable/list_item_play" />

    <TextView
            android:id="@+id/lilms_textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@id/lilms_imageViewPlay"
            android:text="@string/deep_sea_girl"
            android:textColor="@color/lightBlack"
            android:textSize="14sp" />

    <TextView
            android:id="@+id/lilms_textViewArtistAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lilms_textViewTitle"
            android:layout_alignStart="@id/lilms_textViewTitle"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="6dp"
            android:layout_toEndOf="@id/lilms_imageViewPlay"
            android:text="@string/artist_album"
            android:textColor="@color/grey"
            android:textSize="12sp" />


    <ImageView
            android:id="@+id/lilms_imageViewOption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="20dp"
            android:paddingStart="10dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/list_item_option" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/lhm_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

        <ImageView
                android:id="@+id/lhm_ivCover"
                android:layout_width="121dp"
                android:layout_height="121dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary"
                android:contentDescription="@string/empty_str" />

        <TextView
                android:id="@+id/lhm_tvMusicListName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@id/lhm_ivCover"
                android:text="@string/music_list_name"
                android:textColor="@color/write" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/lhm_ivCover"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="5dp">

            <TextView
                    android:id="@+id/lhm_tvCollect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:drawableTop="@drawable/btn_ml_collect"
                    android:gravity="center"
                    android:text="@string/collect"
                    android:textColor="@color/write3" />

            <TextView
                    android:id="@+id/lhm_tvComment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:drawableTop="@drawable/btn_ml_comment"
                    android:gravity="center"
                    android:text="@string/comment"
                    android:textColor="@color/write3" />

            <TextView
                    android:id="@+id/lhm_tvShare"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:drawableTop="@drawable/btn_ml_share"
                    android:gravity="center"
                    android:text="@string/share"
                    android:textColor="@color/write3" />

            <TextView
                    android:id="@+id/lhm_tvDownload"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:drawableTop="@drawable/btn_ml_download"
                    android:gravity="center"
                    android:text="@string/download"
                    android:textColor="@color/write3" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/lhm_llPlayAll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:contentDescription="@string/play_all"
                android:drawableStart="@drawable/play1"
                android:drawablePadding="12dp"
                android:text="@string/play_all"
                android:textColor="@color/lightBlack"
                android:textSize="15sp" />

        <TextView
                android:id="@+id/lhm_tvCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/local_music_count"
                android:textColor="@color/grey"
                android:textSize="13sp" />


        <TextView
                android:id="@+id/lhm_tvMultipleChoice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:contentDescription="@string/multiple_choice"
                android:drawableStart="@drawable/list_header_option"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingStart="9dp"
                android:paddingEnd="9dp"
                android:text="@string/multiple_choice"
                android:textColor="@color/lightBlack"
                android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>